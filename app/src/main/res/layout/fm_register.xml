<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:id="@+id/ll_phone"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/input_bg"
        android:layout_width="216dp"
        android:layout_height="32dp">
        <EditText
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/global_tv_color"
            android:background="@null"
            android:id="@+id/et_phone"
            android:drawablePadding="10dp"
            android:hint="请输入手机号码"
            android:textSize="14sp"
            android:textColorHint="@color/global_tv_hint_color"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/input_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:layout_marginBottom="124dp"
        android:id="@+id/btn_verify"
        android:gravity="center"
        android:text="获取验证码"
        android:background="@drawable/login_btn_bg"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_width="216dp"
        android:layout_height="32dp" />
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_verify"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/input_bg"
            android:layout_width="216dp"
            android:layout_height="32dp">
            <EditText
                android:maxLength="6"
                android:inputType="number"
                android:textColor="@color/global_tv_color"
                android:background="@null"
                android:id="@+id/et_verify"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:textColorHint="@color/global_tv_hint_color"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/input_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <TextView
            android:layout_marginBottom="124dp"
            android:id="@+id/btn_submit_verify"
            android:gravity="center"
            android:text="提交验证码"
            android:background="@drawable/login_btn_bg_disable"
            android:layout_marginTop="18dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_width="216dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_pwd"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/input_bg"
            android:layout_width="216dp"
            android:layout_height="32dp">
            <EditText
                style="@style/pwdEditText"
                android:id="@+id/et_pwd"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/input_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="18dp"
            android:background="@drawable/input_bg"
            android:layout_width="216dp"
            android:layout_height="32dp">
            <EditText
                style="@style/pwdEditText"
                android:id="@+id/et_pwd_confirm"
                android:drawablePadding="10dp"
                android:hint="请再次输入密码"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/input_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <TextView
            android:layout_marginBottom="124dp"
            android:id="@+id/btn_register"
            android:gravity="center"
            android:text="提交注册"
            android:background="@drawable/login_btn_bg_disable"
            android:layout_marginTop="18dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_width="216dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="357dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:drawableRight="@drawable/register_arrow"
            android:textColor="@color/colorPrimaryDark"
            android:text="1.输入手机号"
            android:id="@+id/tv_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/register_arrow"
            android:textColor="@color/global_tv_color"
            android:text="2.输入验证码"
            android:id="@+id/tv_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/global_tv_color"
            android:text="3.设置密码"
            android:id="@+id/tv_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>